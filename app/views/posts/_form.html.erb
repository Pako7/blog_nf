<%= form_with(model: post, class: "contents", data: {controller: data_controller, action: "submit->#{data_controller}#submit", "#{data_controller}-target": "form"} ) do |form| %>
<%= hidden_field_tag 'id', value: post.id, data: {"#{data_controller}-target": 'id' } %>
  
  <% if post.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full",
    data: {"#{data_controller}-target": 'title' } %>
  </div>

  <div class="my-5">
    <%= form.label :body %>
    <%= form.text_area :body, size: '10x10', class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full",
    data: {"#{data_controller}-target": 'body' } %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
